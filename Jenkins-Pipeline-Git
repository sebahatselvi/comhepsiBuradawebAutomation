
pipeline{
    agent any
    
 environment{
    PATH= "/usr/local/Cellar/maven/3.6.2/libexec/bin:$PATH"}
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'github', url: 'https://github.com/sebahatselvi/comhepsiBuradawebAutomation/'
            }
        }
        
         stage("Maven Build"){
            steps{
                sh "mvn clean package" 
            }
        }
         stage("Test for ubuntu"){
            steps{
                echo "test ubuntu"
                sleep 10
            }
        }
          stage("Test for windows"){
            steps{
                echo "test windows"
                sleep 20
            }
        }
          stage("Test extra OS"){
            steps{
                echo "test extra OS"
                sleep 5
            }
        }
    }
}
